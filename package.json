{
  "name": "base-node",
  "version": "1.0.0",
  "description": "Base node project",
  "main": "index.js",
  "author": "cHaLkdusT",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && babel src --extensions \".ts,.tsx\" --out-dir dist",
    "start": "npm run build && node dist/index.js",
    "start:dev": "npx nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier": "npx prettier . --write 'src/**/*.ts' --write",
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@babel/cli": "7.28.3",
    "@babel/core": "7.28.5",
    "@babel/plugin-transform-modules-commonjs": "7.27.1",
    "@babel/preset-env": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@eslint/js": "9.39.1",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "babel-plugin-module-resolver": "5.0.2",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "nodemon": "3.1.11",
    "onchange": "7.1.0",
    "prettier": "3.7.1",
    "rimraf": "6.1.2",
    "ts-jest": "29.4.6",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  }
}
